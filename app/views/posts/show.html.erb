<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Date:</strong>
  <%= @post.date %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Picture:</strong>
  <%= image_tag(@post.picture_url) if @post.picture.present? %>
</p>

<p>
  <strong>Comments:</strong>
  <% if @post.comments.any? %>
    <ul>
      <% @post.comments.each do |comment| %>
      <li>
        <p><%= comment.body %></p>
          <small>
            <%= current_user.name %>さんのコメント
          </small>
        <%= link_to 'destroy', post_comment_path(@post, comment), method: :delete %>
      </li>
      <% end %>
    </ul>
  <% end %>
</p>

<%= form_for([@post, @post.comments.build]) do |form| %>
  <div class="field">
    <strong>New comment:</strong>
    <%= form.text_area :body, id: :comment_body %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
